<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QqMainActivity">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/act_qqmain_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">
    </androidx.viewpager.widget.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#696969"></View>
    <LinearLayout
        android:id="@+id/act_qqmain_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <ImageView
            android:id="@+id/qqmain_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/huihua"/>
        <ImageView
            android:id="@+id/qqmain_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/search"/>
        <ImageView
            android:id="@+id/qqmain_image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"

        android:layout_weight="1"
        android:src="@drawable/setting"/>
        <ImageView
            android:id="@+id/qqmain_image4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/dongtai"/>
    </LinearLayout>
</LinearLayout>
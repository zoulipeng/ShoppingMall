<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parnterfrag.ParnterFragment">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:layout_marginTop="10dp"
     android:background="@drawable/parter_man">
 <TextView
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="男生:"
     android:gravity="center"></TextView>
 <ImageView
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:id="@+id/parnterfrag_iv_man"></ImageView>

   <Spinner
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:id="@+id/parnterfrag_sp_man"></Spinner>
 </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_marginTop="15dp"
     android:layout_height="100dp"
     android:background="@drawable/parter_women">
 <TextView
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:text="女生"
     android:gravity="center"></TextView>
  <ImageView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:id="@+id/parnter_iv_women"></ImageView>
  <Spinner
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:id="@+id/parnterfrag_sp_women"></Spinner>
 </LinearLayout>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="@string/parnter_match"
     android:gravity="center"
     android:textColor="@color/lightred"
     android:layout_marginTop="15dp"
     android:textSize="18sp"></TextView>
  <Button
      android:layout_width="match_parent"
      android:layout_marginTop="80dp"
      android:text="每日抽奖"
      android:layout_height="wrap_content"
      android:id="@+id/parnterfrag_btn_price"
      android:background="@drawable/parter_man"></Button>
  <Button
      android:layout_width="match_parent"
      android:layout_marginTop="30dp"
      android:text="开始配对分析"
      android:layout_height="wrap_content"
      android:id="@+id/parnterfrag_bt_match"
      android:background="@drawable/parter_women"></Button>
</LinearLayout>